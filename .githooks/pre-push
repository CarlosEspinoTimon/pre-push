echo "Skip pre-commit hooks with --no-verify (not recommended)."

BRANCH=`git rev-parse --abbrev-ref HEAD`
if [ "$BRANCH" = "master" ]; 
then
  echo "You are on branch $BRANCH. You must not push to master"
  exit 1
fi

if [ `date +%w` -ge 5 ] && [ "$BRANCH" = "develop" ]; 
then
  echo "Please, do not push code to develop before the weekend!"
  exit 1
fi
(cd local_environment && make backend-tests)
exit $?

